<body>
	<% include common/_header %>
    <section class="container">
        <aside class="aside"></aside>
        <section class="section">
           <h3>发表文章</h3>
           <form action="/article/create/<%= article.article_id %>" method="post" class="newblog" onsubmit="return checkContent()"  enctype="multipart/form-data">
           		<div class="row">
           			<span><i class="cred">*</i>标题</span>
           			<input type="text" name="title" required placeholder="请输入标题" min="3" value="<%= article.title %>">
           		</div>
           		<div class="row">
           			<span style="margin-right:17px;">封面</span>
           			<input type="file" style="display:none" onchange="addPicture();" name="image" accept="image/*">
           			<span id="upload" class="btn btn-green">上传图片</span>
           		</div>
