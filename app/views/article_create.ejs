                  }).done(function (res) {
                    console.log(res);
                  })
                })*/
              </script>
           		<div class="row">
           			<span><i class="cred">*</i>栏目</span>
           			<select name="type" id="type">
           				<option value="前端开发">前端开发</option>
           				<option value="后端开发">后端开发</option>
           				<option value="职场/生活">职场/生活</option>
           				<option value="移动开发">移动开发</option>
           				<option value="其他类干货">其他类干货</option>
           			</select>
           		</div>
           		<div class="row">
           			<span><i class="cred">*</i>内容</span>
           			<textarea required name="content" id="content" required>
                  <%= article.content %>
                </textarea>
           		</div>
           		<div class="row">
           			<span>标签</span>
           			<input name="label" readonly="readonly" type="text">
           		</div>
              <div class="row" style="margin-top: -35px;margin-left: 6px;">
                <span></span>
                <span id="labels">
                  <p style="font-size: 0.9em;">您最多可以从以下选择3个标签哟！</p>
                </span>
              </div>
           		<div class="row">
           			<input type="submit" class="btn btn-green" value="  提交  " >
                <small>文章提交审核通过后自动发布，审核期间您可以在个人中心我的文章-我的原创中查看文章审核进度</small>
           		</div>
           </form>
        </section>
    </section>
